@{
    ViewBag.Title = "Contact me!";
}
<h1>My details should go here</h1>
<form method="post">
    <label>
        Email:
        <input name="email" type="email"/>
    </label>
    <br/>
    <label>
        Username:
        <input name="name"/>
    </label>
    <br/>
    <label>
        Password:
        <input name="password" type="password"/>
    </label>
    <br/>
    <label>
        Message:
        <textarea name="text" rows="4"></textarea>
    </label>
    <br/>
    <input type="submit" value="Submit"/>
</form>